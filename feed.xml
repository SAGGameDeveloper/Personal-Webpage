<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom" xmlns:dc="http://purl.org/dc/elements/1.1/">
	<channel>
		<title>{{ site.name | xml_escape }} Blog</title>
		<description>{% if site.rss_description %}{{ site.rss_description | xml_escape }}{% endif %}</description>
		<link>{{ site.url }}/blog/</link>
		<image>
    	<url>{{ site.url }}{{ site.baseurl }}{{ site.baseurl_favicon_png }}</url>
			<title>{{ site.name | xml_escape }} Blog</title>
   		<link>{{ site.url }}/blog/</link>
			<width>100</width>
			<height>100</height>
		</image>
		<atom:link href="{{ site.url }}/feed.xml" rel="self" type="application/rss+xml" />
		{% for post in site.posts limit:10 %}
			<item>
				<title>{{ post.title | xml_escape }} Blog</title>
				{% if post.author.name %}
					<dc:creator>{{ post.author.name | xml_escape }}</dc:creator>
				{% endif %}
				{% if post.excerpt %}
					<description>{{ post.excerpt | xml_escape }}</description>
				{% else %}
					<description>{{ post.content | xml_escape }}</description>
				{% endif %}
				<pubDate>{{ post.date | date_to_rfc822 }}</pubDate>
				<link>{{ site.url }}{{ post.url }}</link>
				<guid isPermaLink="true">{{ site.url }}{{ post.url }}</guid>
			</item>
		{% endfor %}
	</channel>
</rss>
